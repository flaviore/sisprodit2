@model SisprodIT2.Areas.Chamado.Models.ChamadoModel
@{
    ViewBag.Title = "Chamados";
    ViewBag.TitleSingle = "Chamado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="page-header">
        <h1>
            Fechamento de @ViewBag.Title</h1>
        <p>
            Esta página é destinada ao fechamento de @ViewBag.Title.
        </p>
    </div>
    <div class="row">
        <div class="col-md-6 col-sm-offset-3">
            <div class="row">
                <div class="col-md-6">
                    <p>
                        <strong>Deseja fechar este @ViewBag.TitleSingle?</strong></p>
                </div>
            </div>
            <dl class="dl-horizontal">
                <dt>@Html.DisplayNameFor(model => model.Titulo)</dt>
                <dd>@Html.DisplayFor(model => model.Titulo)</dd>
                <dt>@Html.DisplayNameFor(model => model.Descricao)</dt>
                <dd>@Html.DisplayFor(model => model.Descricao)</dd>
                <dt>@Html.DisplayNameFor(model => model.Status)</dt>
                <dd>@Html.DisplayFor(model => model.Status)</dd>
                <dt>@Html.DisplayNameFor(model => model.CategoriaModelId)</dt>
                <dd>@Html.DisplayFor(model => model.Categoria.Descricao)</dd>
                <dt>@Html.DisplayNameFor(model => model.FuncionarioCriadorId)</dt>
                <dd>@Html.DisplayFor(model => model.FuncionarioCriador.Nome)</dd>
                <dt>@Html.DisplayNameFor(model => model.FuncionarioResponsavelId)</dt>
                <dd>@Html.DisplayFor(model => model.FuncionarioResponsavel.Nome)</dd>
                <dt>@Html.DisplayNameFor(model => model.DataCadastro)</dt>
                <dd>@Html.DisplayFor(model => model.DataCadastro)</dd>
                <dt>@Html.DisplayNameFor(model => model.DataAtualizacao)</dt>
                <dd>@Html.DisplayFor(model => model.DataAtualizacao)</dd>
            </dl>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true, "", new { @style = "color: red" })
                @Html.HiddenFor(model => model.FuncionarioAtualizadorId, new { Value = @ViewBag.FuncionarioModelId }) 
                @Html.HiddenFor(model => model.DataCadastro)
                @Html.HiddenFor(model => model.DataAtualizacao, new { Value = DateTime.Now.ToString(new System.Globalization.CultureInfo("pt-BR")) })
                @Html.HiddenFor(model => model.Revisao, new { Value = @ViewBag.Revisao })
                @Html.HiddenFor(model => model.Status, new { Value = @ViewBag.Status })
                @Html.HiddenFor(model => model.FuncionarioCriadorId, new { Value = @ViewBag.FuncionarioModelId }) 
                @Html.HiddenFor(model => model.Ativo)
                @Html.HiddenFor(model => model.Revisao, new { Value = @ViewBag.Revisao })
                @Html.HiddenFor(model => model.Descricao)
                @Html.HiddenFor(model => model.Titulo)
                @Html.HiddenFor(model => model.CategoriaModelId)
                @Html.HiddenFor(model => model.ChamadoModelId)
                @Html.HiddenFor(model => model.FuncionarioResponsavelId)
                                
                @Html.ValidationMessageFor(model => model.DataCadastro)
                @Html.ValidationMessageFor(model => model.DataAtualizacao)
                @Html.ValidationMessageFor(model => model.FuncionarioAtualizadorId)
                @Html.ValidationMessageFor(model => model.Revisao)
                @Html.ValidationMessageFor(model => model.Status)
                @Html.ValidationMessageFor(model => model.Ativo)
                @Html.ValidationMessageFor(model => model.FuncionarioCriadorId)
                
                
                <div class="form-group">
                    @Html.Label("Atribuir código de finalização")
                    @Html.DropDownList("FinalizacaoModelId", String.Empty)
                    @Html.ValidationMessageFor(model => model.FinalizacaoModelId)
                </div>
                
                <p>
                    <button type="submit" class="btn btn-default">
                        Fechar Chamado</button>
                    @Html.ActionLink("Cancelar", "Index", "Home", new { Area = "" }, new { @class = "btn btn-Link" })
                </p>
            }
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.9.1.js" type="text/javascript"></script>
<script type="text/javascript">

    $("#FinalizacaoModelId").addClass("form-control");
    

</script>
