@model SisprodIT2.Areas.Telefone.Models.TelefoneModel
@{
    ViewBag.Title = "Telefones";
    ViewBag.TitleSingle = "Telefone";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="page-header">
        <h1>
            Edição de @ViewBag.Title</h1>
        <p>
            Esta página é destinada à edição de @ViewBag.Title. Somente administradores possuem
            permissão para manipular os @ViewBag.Title dos usuários.
        </p>
    </div>
    <div class="row">
        <div class="col-md-6 col-sm-offset-3">
            <div class="row">
                <div class="col-md-6">
                    <p>
                        <strong>Edição de @ViewBag.Title</strong></p>
                </div>
            </div>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true, "", new { @style = "color: red" })
                @Html.HiddenFor(model => model.FuncionarioAtualizadorId, new { Value = @ViewBag.FuncionarioModelId }) 
                @Html.HiddenFor(model => model.DataCadastro)
                @Html.HiddenFor(model => model.DataAtualizacao, new { Value = DateTime.Now.ToString(new System.Globalization.CultureInfo("pt-BR")) })
                @Html.HiddenFor(model => model.FuncionarioModelId) 
                
                if (!string.IsNullOrEmpty(ViewBag.Mensagem))
                {
                @: <div class="alert alert-success alert-dismissible" role="alert"> <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @:     <strong>Sucesso!</strong> O telefone foi alterado com sucesso. Clique em "Voltar para a lista" para retornar.
                @: </div>
                }

                @Html.HiddenFor(model => model.TelefoneModelId)

                <div class="form-group">
                    @Html.LabelFor(model => model.DDD)
                    @Html.EditorFor(model => model.DDD)
                    @Html.ValidationMessageFor(model => model.DDD)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Telefone)
                    @Html.EditorFor(model => model.Telefone)
                    @Html.ValidationMessageFor(model => model.Telefone)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Ativo)
                    @Html.EditorFor(model => model.Ativo)
                    @Html.ValidationMessageFor(model => model.Ativo)
                </div>

                <p>
                    <button type="submit" class="btn btn-default">
                        Salvar</button>
                    @Html.ActionLink("Cancelar", "Index", new object { }, new { @class = "btn btn-Link" })
                </p>

            }
            @Html.ActionLink("Voltar para a lista", "Edit", "Funcionario", new { area = "Funcionario", id = ViewBag.FuncionarioModelId }, new { })
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.9.1.js" type="text/javascript"></script>
<script type="text/javascript">

    $("#DDD").addClass("form-control");
    $("#Telefone").addClass("form-control");

</script>
