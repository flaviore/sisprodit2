@model SisprodIT2.Areas.Comentario.Models.ComentarioModel
@{
    ViewBag.Title = "Comentários";
    ViewBag.TitleSingle = "Comentário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="page-header">
        <h1>
            Edição de @ViewBag.Title</h1>
        <p>
            Esta página é destinada à edição de @ViewBag.Title.
        </p>
    </div>
    <div class="row">
        <div class="col-md-6 col-sm-offset-3">
            <div class="row">
                <div class="col-md-6">
                    <p>
                        <strong>Edição de @ViewBag.Title</strong></p>
                </div>
            </div>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true, "", new { @style = "color: red" })
                @Html.HiddenFor(model => model.FuncionarioAtualizadorId, new { Value = @ViewBag.FuncionarioModelId }) 
                @Html.HiddenFor(model => model.DataCadastro)
                @Html.HiddenFor(model => model.DataAtualizacao, new { Value = DateTime.Now.ToString(new System.Globalization.CultureInfo("pt-BR")) })
                @Html.HiddenFor(model => model.ComentarioModelId)
                @Html.HiddenFor(model => model.Ativo, new { Value = true })
                //@Html.HiddenFor(model => model.ChamadoModelId, new { Value = @ViewBag.ChamadoModelId }) 
                @Html.HiddenFor(model => model.ChamadoModelId) 

                @Html.ValidationMessageFor(model => model.Ativo)
                @Html.ValidationMessageFor(model => model.Ordem)
                @Html.ValidationMessageFor(model => model.DataCadastro)
                @Html.ValidationMessageFor(model => model.DataAtualizacao)
                @Html.ValidationMessageFor(model => model.FuncionarioAtualizadorId)

                <div class="form-group">
                    @Html.LabelFor(model => model.Comentario)
                    @Html.TextAreaFor(model => model.Comentario, 10, 20, null)
                    @Html.ValidationMessageFor(model => model.Comentario)
                </div>

                <p>
                    <button type="submit" class="btn btn-default">
                        Salvar</button>
                    @Html.ActionLink("Cancelar", "Details", new { area = "Comentario", id = Model.ChamadoModelId }, new { @class = "btn btn-Link" })
                </p>

            }
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.9.1.js" type="text/javascript"></script>
<script type="text/javascript">

    $("#Comentario").addClass("form-control");

</script>
