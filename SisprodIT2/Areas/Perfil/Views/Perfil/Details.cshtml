@model SisprodIT2.Areas.Perfil.Models.PerfilModel

@{
    ViewBag.Title = "Perfis";
	ViewBag.TitleSingle = "Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="page-header">
