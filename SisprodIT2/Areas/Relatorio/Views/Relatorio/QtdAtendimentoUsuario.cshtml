@model DotNet.Highcharts.Highcharts
@using SisprodIT2.Areas.Relatorio.Models

@{
    ViewBag.Title = "QtdAtendimentoUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<script src="~/Scripts/jquery-1.9.1.js" type="text/javascript"></script>
<script src="~/js/highcharts.js" type="text/javascript"></script>
</script>
<div class="container">
    <div class="page-header">
        <h1>
            Quantitativo de Chamados Atendidos por Usuários</h1>
        <p>
            Este relatório refere-se aos chamados abertos.
        </p>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div>
                        @(Model)
                    </div>
                    <div>

                    
                        <table class="table table-bordered">
                            <tr class="active">
                                <th>
                                    Nome
                                </th>
                                <th>
                                    Total
                                </th>
                            </tr>
                            @{ int somatorio = 0; }
                            @foreach (var item in ViewBag.Usuarios)
                            {
                                <tr>
                                <td>
                                    @item.usuario
                                </td>
                                <td>
                                    @item.total
                                </td>
                            </tr>
                                somatorio = somatorio + item.total;
                            }
                            
                            <tr class="active">
                                <td>
                                    <b>Total</b>
                                </td>
                                <td>
                                    @somatorio
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

